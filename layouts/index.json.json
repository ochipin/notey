{{- $pages := where .Site.RegularPages "Params.search" "ne" false -}}
[
{{- range $i, $p := $pages -}}
  {{- if $i }},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    {{- if and $p.GitInfo $p.GitInfo.AuthorDate }}
    "date": {{ $p.GitInfo.AuthorDate.Format "2006-01-02 15:04" | jsonify }},
    {{- end }}
    "topic": {{ with $p.FirstSection }}{{ .Title | jsonify }}{{ else }}null{{ end }},
    "url": {{ $p.RelPermalink | jsonify }},
    "content": {{ $p.Plain | jsonify }}
  }
{{- end -}}
]
